<Window x:Class="DeskDefender.Windows.LogDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Event Log Details" Height="500" Width="700"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource PrimaryBackgroundBrush}"
        Foreground="{DynamicResource PrimaryTextBrush}"
        ResizeMode="CanResize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Event Log Details" FontSize="18" FontWeight="Bold" 
                   Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,0,20"/>
        
        <!-- Event Metadata -->
        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Event Type -->
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Event Type:" FontWeight="Bold" 
                       Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,10,5"/>
            <TextBlock Grid.Row="0" Grid.Column="1" x:Name="EventTypeText" 
                       Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,20,5"/>
            
            <!-- Timestamp -->
            <TextBlock Grid.Row="0" Grid.Column="2" Text="Timestamp:" FontWeight="Bold" 
                       Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,10,5"/>
            <TextBlock Grid.Row="0" Grid.Column="3" x:Name="TimestampText" 
                       Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,0,5"/>
            
            <!-- Severity -->
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Severity:" FontWeight="Bold" 
                       Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,10,5"/>
            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="0,0,20,5">
                <Ellipse x:Name="SeverityIndicator" Width="12" Height="12" Margin="0,0,8,0"/>
                <TextBlock x:Name="SeverityText" Foreground="{DynamicResource PrimaryTextBrush}"/>
            </StackPanel>
            
            <!-- Alert Status -->
            <TextBlock Grid.Row="1" Grid.Column="2" Text="Alert Sent:" FontWeight="Bold" 
                       Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,10,5"/>
            <TextBlock Grid.Row="1" Grid.Column="3" x:Name="AlertStatusText" 
                       Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,0,5"/>
        </Grid>
        
        <!-- Full Description -->
        <Border Grid.Row="2" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" 
                Background="{DynamicResource SecondaryBackgroundBrush}">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Padding="15">
                <TextBlock x:Name="FullDescriptionText" TextWrapping="Wrap" 
                          Foreground="{DynamicResource PrimaryTextBrush}" FontFamily="Consolas" FontSize="12"
                          LineHeight="18"/>
            </ScrollViewer>
        </Border>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Copy to Clipboard" Click="CopyToClipboard_Click" 
                    Padding="12,6" Margin="0,0,10,0"
                    Background="{DynamicResource ControlBackgroundBrush}"
                    Foreground="{DynamicResource PrimaryTextBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"/>
            <Button Content="Close" Click="Close_Click" 
                    Padding="12,6" IsDefault="True"
                    Background="{DynamicResource AccentBrush}"
                    Foreground="{DynamicResource PrimaryTextBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"/>
        </StackPanel>
    </Grid>
</Window>
