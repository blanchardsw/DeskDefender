&lt;Window x:Class="DeskDefender.Windows.AlertSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Alert Settings - DeskDefender" 
        Height="700" 
        Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinHeight="600"
        MinWidth="500"
        Background="{DynamicResource BackgroundBrush}"
        Foreground="{DynamicResource ForegroundBrush}"&gt;
    
    &lt;Grid Margin="20"&gt;
        &lt;Grid.RowDefinitions&gt;
            &lt;RowDefinition Height="Auto"/&gt;
            &lt;RowDefinition Height="*"/&gt;
            &lt;RowDefinition Height="Auto"/&gt;
        &lt;/Grid.RowDefinitions&gt;
        
        &lt;!-- Header --&gt;
        &lt;StackPanel Grid.Row="0" Margin="0,0,0,20"&gt;
            &lt;TextBlock Text="üì± Alert Settings" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="{DynamicResource AccentBrush}"
                       HorizontalAlignment="Center"/&gt;
            &lt;TextBlock Text="Configure SMS and email notifications for security alerts" 
                       FontSize="14" 
                       Foreground="{DynamicResource SecondaryForegroundBrush}"
                       HorizontalAlignment="Center"
                       Margin="0,5,0,0"/&gt;
        &lt;/StackPanel&gt;
        
        &lt;!-- Main Content --&gt;
        &lt;ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto"&gt;
            &lt;StackPanel&gt;
                
                &lt;!-- General Settings --&gt;
                &lt;GroupBox Header="üìä General Settings" Margin="0,0,0,20" Padding="15"&gt;
                    &lt;StackPanel&gt;
                        &lt;Grid&gt;
                            &lt;Grid.ColumnDefinitions&gt;
                                &lt;ColumnDefinition Width="Auto"/&gt;
                                &lt;ColumnDefinition Width="*"/&gt;
                                &lt;ColumnDefinition Width="Auto"/&gt;
                            &lt;/Grid.ColumnDefinitions&gt;
                            
                            &lt;TextBlock Grid.Column="0" Text="Summary Interval:" VerticalAlignment="Center" Margin="0,0,10,0"/&gt;
                            &lt;Slider Grid.Column="1" 
                                    x:Name="SummaryIntervalSlider"
                                    Minimum="15" 
                                    Maximum="480" 
                                    Value="60"
                                    TickFrequency="15"
                                    IsSnapToTickEnabled="True"
                                    VerticalAlignment="Center"/&gt;
                            &lt;TextBlock Grid.Column="2" 
                                       Text="{Binding ElementName=SummaryIntervalSlider, Path=Value, StringFormat='{}{0} minutes'}"
                                       VerticalAlignment="Center" 
                                       Margin="10,0,0,0"
                                       MinWidth="80"/&gt;
                        &lt;/Grid&gt;
                        
                        &lt;StackPanel Margin="0,15,0,0"&gt;
                            &lt;TextBlock Text="Minimum Alert Severity:" Margin="0,0,0,5"/&gt;
                            &lt;ComboBox x:Name="MinimumSeverityComboBox" SelectedIndex="2"&gt;
                                &lt;ComboBoxItem Content="Critical" Tag="Critical"/&gt;
                                &lt;ComboBoxItem Content="High" Tag="High"/&gt;
                                &lt;ComboBoxItem Content="Medium" Tag="Medium"/&gt;
                                &lt;ComboBoxItem Content="Low" Tag="Low"/&gt;
                                &lt;ComboBoxItem Content="Info" Tag="Info"/&gt;
                            &lt;/ComboBox&gt;
                        &lt;/StackPanel&gt;
                        
                        &lt;CheckBox x:Name="IncludeSystemEventsCheckBox" 
                                  Content="Include system events in alerts" 
                                  Margin="0,15,0,0"/&gt;
                        
                        &lt;StackPanel Margin="0,15,0,0"&gt;
                            &lt;TextBlock Text="Maximum events per alert:" Margin="0,0,0,5"/&gt;
                            &lt;TextBox x:Name="MaxEventsTextBox" Text="20" Width="100" HorizontalAlignment="Left"/&gt;
                        &lt;/StackPanel&gt;
                    &lt;/StackPanel&gt;
                &lt;/GroupBox&gt;
                
                &lt;!-- SMS Settings --&gt;
                &lt;GroupBox Header="üì± SMS Settings" Margin="0,0,0,20" Padding="15"&gt;
                    &lt;StackPanel&gt;
                        &lt;CheckBox x:Name="SmsEnabledCheckBox" 
                                  Content="Enable SMS alerts" 
                                  Checked="OnSmsEnabledChanged" 
                                  Unchecked="OnSmsEnabledChanged"
                                  Margin="0,0,0,15"/&gt;
                        
                        &lt;StackPanel x:Name="SmsSettingsPanel" IsEnabled="False"&gt;
                            &lt;TextBlock Text="Phone Number (E.164 format, e.g., +1234567890):" Margin="0,0,0,5"/&gt;
                            &lt;TextBox x:Name="PhoneNumberTextBox" Margin="0,0,0,15"/&gt;
                            
                            &lt;TextBlock Text="Twilio Account SID:" Margin="0,0,0,5"/&gt;
                            &lt;TextBox x:Name="TwilioAccountSidTextBox" Margin="0,0,0,15"/&gt;
                            
                            &lt;TextBlock Text="Twilio Auth Token:" Margin="0,0,0,5"/&gt;
                            &lt;PasswordBox x:Name="TwilioAuthTokenPasswordBox" Margin="0,0,0,15"/&gt;
                            
                            &lt;TextBlock Text="Twilio Phone Number:" Margin="0,0,0,5"/&gt;
                            &lt;TextBox x:Name="TwilioPhoneNumberTextBox" Margin="0,0,0,15"/&gt;
                            
                            &lt;Button x:Name="TestSmsButton" 
                                    Content="üì± Send Test SMS" 
                                    Click="OnTestSmsClick"
                                    HorizontalAlignment="Left"
                                    Padding="10,5"/&gt;
                        &lt;/StackPanel&gt;
                    &lt;/StackPanel&gt;
                &lt;/GroupBox&gt;
                
                &lt;!-- Email Settings --&gt;
                &lt;GroupBox Header="üìß Email Settings" Margin="0,0,0,20" Padding="15"&gt;
                    &lt;StackPanel&gt;
                        &lt;CheckBox x:Name="EmailEnabledCheckBox" 
                                  Content="Enable email alerts" 
                                  Checked="OnEmailEnabledChanged" 
                                  Unchecked="OnEmailEnabledChanged"
                                  Margin="0,0,0,15"/&gt;
                        
                        &lt;StackPanel x:Name="EmailSettingsPanel" IsEnabled="False"&gt;
                            &lt;TextBlock Text="Email Address:" Margin="0,0,0,5"/&gt;
                            &lt;TextBox x:Name="EmailAddressTextBox" Margin="0,0,0,15"/&gt;
                            
                            &lt;TextBlock Text="SMTP Server:" Margin="0,0,0,5"/&gt;
                            &lt;TextBox x:Name="SmtpServerTextBox" Margin="0,0,0,15"/&gt;
                            
                            &lt;Grid Margin="0,0,0,15"&gt;
                                &lt;Grid.ColumnDefinitions&gt;
                                    &lt;ColumnDefinition Width="*"/&gt;
                                    &lt;ColumnDefinition Width="20"/&gt;
                                    &lt;ColumnDefinition Width="Auto"/&gt;
                                &lt;/Grid.ColumnDefinitions&gt;
                                
                                &lt;StackPanel Grid.Column="0"&gt;
                                    &lt;TextBlock Text="SMTP Port:" Margin="0,0,0,5"/&gt;
                                    &lt;TextBox x:Name="SmtpPortTextBox" Text="587"/&gt;
                                &lt;/StackPanel&gt;
                                
                                &lt;StackPanel Grid.Column="2"&gt;
                                    &lt;TextBlock Text=" " Margin="0,0,0,5"/&gt;
                                    &lt;CheckBox x:Name="SmtpUseSslCheckBox" 
                                              Content="Use SSL" 
                                              IsChecked="True"
                                              VerticalAlignment="Center"/&gt;
                                &lt;/StackPanel&gt;
                            &lt;/Grid&gt;
                            
                            &lt;TextBlock Text="SMTP Username:" Margin="0,0,0,5"/&gt;
                            &lt;TextBox x:Name="SmtpUsernameTextBox" Margin="0,0,0,15"/&gt;
                            
                            &lt;TextBlock Text="SMTP Password:" Margin="0,0,0,5"/&gt;
                            &lt;PasswordBox x:Name="SmtpPasswordPasswordBox" Margin="0,0,0,15"/&gt;
                            
                            &lt;Button x:Name="TestEmailButton" 
                                    Content="üìß Send Test Email" 
                                    Click="OnTestEmailClick"
                                    HorizontalAlignment="Left"
                                    Padding="10,5"/&gt;
                        &lt;/StackPanel&gt;
                    &lt;/StackPanel&gt;
                &lt;/GroupBox&gt;
                
            &lt;/StackPanel&gt;
        &lt;/ScrollViewer&gt;
        
        &lt;!-- Footer Buttons --&gt;
        &lt;StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0"&gt;
            &lt;Button x:Name="SaveButton" 
                    Content="üíæ Save Settings" 
                    Click="OnSaveClick"
                    Padding="15,8" 
                    Margin="0,0,10,0"
                    Background="{DynamicResource AccentBrush}"
                    Foreground="White"
                    FontWeight="Bold"/&gt;
            &lt;Button x:Name="CancelButton" 
                    Content="‚ùå Cancel" 
                    Click="OnCancelClick"
                    Padding="15,8"/&gt;
        &lt;/StackPanel&gt;
        
    &lt;/Grid&gt;
&lt;/Window&gt;
