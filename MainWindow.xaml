<Window x:Class="DeskDefender.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeskDefender"
        mc:Ignorable="d"
        Title="DeskDefender - Security Monitoring" Height="700" Width="1200"
        MinHeight="600" MinWidth="900"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource PrimaryBackgroundBrush}"
        Foreground="{DynamicResource PrimaryTextBrush}">
    
    <!-- Main Grid Layout -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Menu/Toolbar -->
            <RowDefinition Height="Auto"/> <!-- Status Bar -->
            <RowDefinition Height="*"/>    <!-- Main Content -->
            <RowDefinition Height="Auto"/> <!-- Bottom Status -->
        </Grid.RowDefinitions>
        
        <!-- Menu Bar -->
        <Menu Grid.Row="0" Background="{DynamicResource PrimaryBackgroundBrush}">
            <Menu.Resources>
                <Style TargetType="MenuItem">
                    <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Style.Triggers>
                        <Trigger Property="IsHighlighted" Value="True">
                            <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
                            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
                        </Trigger>
                        <Trigger Property="IsSubmenuOpen" Value="True">
                            <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
                            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Menu.Resources>
            <MenuItem Header="_File" Foreground="{DynamicResource PrimaryTextBrush}">
                <MenuItem Header="_Settings" Click="Settings_Click" Foreground="{DynamicResource PrimaryTextBrush}" Background="{DynamicResource SecondaryBackgroundBrush}"/>
                <MenuItem Header="_Export Logs" Click="ExportLogs_Click" Foreground="{DynamicResource PrimaryTextBrush}" Background="{DynamicResource SecondaryBackgroundBrush}"/>
                <MenuItem Header="_Clear Logs" Click="ClearLogs_Click" Foreground="{DynamicResource PrimaryTextBrush}" Background="{DynamicResource SecondaryBackgroundBrush}"/>
                <MenuItem Header="_Test Database" Click="TestDatabase_Click" Foreground="{DynamicResource PrimaryTextBrush}" Background="{DynamicResource SecondaryBackgroundBrush}"/>
                <Separator/>
                <MenuItem Header="E_xit" Click="Exit_Click" Foreground="{DynamicResource PrimaryTextBrush}" Background="{DynamicResource SecondaryBackgroundBrush}"/>
            </MenuItem>
            <MenuItem Header="_View" Foreground="{DynamicResource PrimaryTextBrush}">
                <MenuItem Header="_Event Log" Click="ViewEventLog_Click" Foreground="{DynamicResource PrimaryTextBrush}" Background="{DynamicResource SecondaryBackgroundBrush}"/>
                <MenuItem Header="_Statistics" Click="ViewStatistics_Click" Foreground="{DynamicResource PrimaryTextBrush}" Background="{DynamicResource SecondaryBackgroundBrush}"/>
            </MenuItem>
            <MenuItem Header="_Help" Foreground="{DynamicResource PrimaryTextBrush}">
                <MenuItem Header="_About" Click="About_Click" Foreground="{DynamicResource PrimaryTextBrush}" Background="{DynamicResource SecondaryBackgroundBrush}"/>
                <MenuItem Header="_Test Alert" Click="TestAlert_Click" Foreground="{DynamicResource PrimaryTextBrush}" Background="{DynamicResource SecondaryBackgroundBrush}"/>
            </MenuItem>
        </Menu>
        
        <!-- Status Header -->
        <Border Grid.Row="1" Background="{DynamicResource SecondaryBackgroundBrush}" Padding="10,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Monitoring Status -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Ellipse x:Name="StatusIndicator" Width="12" Height="12" Fill="Red" Margin="0,0,10,0"/>
                    <TextBlock x:Name="StatusText" Text="Monitoring Stopped" Foreground="{DynamicResource PrimaryTextBrush}" FontWeight="Bold"/>
                </StackPanel>
                
                <!-- System Info -->
                <TextBlock Grid.Column="1" x:Name="SystemInfoText" Text="System: Loading..." 
                          Foreground="{DynamicResource SecondaryTextBrush}" HorizontalAlignment="Center"/>
                
                <!-- Toggle Button -->
                <Button Grid.Column="2" x:Name="ToggleMonitoringButton" Content="Start Monitoring" 
                       Click="ToggleMonitoring_Click" Padding="15,5" 
                       Background="#27AE60" Foreground="{DynamicResource PrimaryTextBrush}" BorderThickness="0"
                       FontWeight="Bold" Cursor="Hand" Focusable="False" IsTabStop="False"/>
            </Grid>
        </Border>
        
        <!-- Main Content Area -->
        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/> <!-- Left Panel -->
                <ColumnDefinition Width="5"/>   <!-- Splitter -->
                <ColumnDefinition Width="3*"/> <!-- Right Panel -->
            </Grid.ColumnDefinitions>
            
            <!-- Left Panel - Camera Feed and Controls -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>    <!-- Camera Feed -->
                    <RowDefinition Height="Auto"/> <!-- Camera Controls -->
                    <RowDefinition Height="200"/>  <!-- Recent Events -->
                </Grid.RowDefinitions>
                
                <!-- Camera Feed -->
                <Border Grid.Row="0" BorderBrush="#BDC3C7" BorderThickness="2" Margin="0,0,0,10">
                    <Grid>
                        <Image x:Name="CameraFeedImage" Stretch="Uniform" 
                              Source="Resources/no-camera.png"/>
                        <TextBlock Text="Camera Feed" HorizontalAlignment="Center" 
                                  VerticalAlignment="Center" FontSize="16" 
                                  Foreground="#7F8C8D" x:Name="CameraPlaceholder"/>
                    </Grid>
                </Border>
                
                <!-- Camera Controls -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
                    <Button x:Name="CaptureFrameButton" Content="ðŸ“· Capture" 
                           Click="CaptureFrame_Click" Margin="0,0,10,0" Padding="10,5"/>
                    <Button x:Name="SaveImageButton" Content="ðŸ’¾ Save" 
                           Click="SaveImage_Click" Margin="0,0,10,0" Padding="10,5"/>
                    <TextBlock Text="Motion Sensitivity:" VerticalAlignment="Center" Margin="20,0,5,0"/>
                    <Slider x:Name="MotionSensitivitySlider" Width="100" Minimum="0" Maximum="1" 
                           Value="0.5" VerticalAlignment="Center" ValueChanged="MotionSensitivity_Changed"/>
                    <TextBlock x:Name="SensitivityValue" Text="0.5" VerticalAlignment="Center" Margin="5,0,0,0"/>
                </StackPanel>
                
                <!-- Recent Events List -->
                <Border Grid.Row="2" BorderBrush="#BDC3C7" BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Text="Recent Events" FontWeight="Bold" 
                                  Background="{DynamicResource SecondaryBackgroundBrush}" 
                                  Foreground="{DynamicResource PrimaryTextBrush}" Padding="10,5"/>
                        
                        <ListView Grid.Row="1" x:Name="RecentEventsList" 
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                 Background="{DynamicResource SecondaryBackgroundBrush}"
                                 Foreground="{DynamicResource PrimaryTextBrush}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <Ellipse Grid.Column="0" Width="8" Height="8" 
                                                Fill="{Binding SeverityColor}" Margin="0,0,10,0"/>
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="{Binding EventType}" FontWeight="Bold" 
                                                      Foreground="{DynamicResource PrimaryTextBrush}"/>
                                            <TextBlock Text="{Binding Description}" 
                                                      TextWrapping="Wrap" Foreground="{DynamicResource SecondaryTextBrush}"/>
                                        </StackPanel>
                                        <TextBlock Grid.Column="2" Text="{Binding TimeAgo}" 
                                                  Foreground="{DynamicResource SecondaryTextBrush}" FontSize="10"/>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </Border>
            </Grid>
            
            <!-- Splitter -->
            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" 
                         Background="#BDC3C7" ResizeBehavior="PreviousAndNext"/>
            
            <!-- Right Panel - Statistics and Logs -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="200"/> <!-- Statistics -->
                    <RowDefinition Height="10"/>  <!-- Spacing -->
                    <RowDefinition Height="*"/>   <!-- Event Log -->
                </Grid.RowDefinitions>
                
                <!-- Statistics Panel -->
                <Border Grid.Row="0" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Text="System Statistics" FontWeight="Bold" 
                                  Background="{DynamicResource SecondaryBackgroundBrush}" 
                                  Foreground="{DynamicResource PrimaryTextBrush}" Padding="10,5"/>
                        
                        <Grid Grid.Row="1" Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Statistics Labels and Values -->
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Total Events:" FontWeight="Bold" 
                                      Foreground="{DynamicResource PrimaryTextBrush}"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" x:Name="TotalEventsText" Text="0" 
                                      Foreground="{DynamicResource PrimaryTextBrush}"/>
                            
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Today's Events:" FontWeight="Bold" 
                                      Foreground="{DynamicResource PrimaryTextBrush}"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="TodayEventsText" Text="0" 
                                      Foreground="{DynamicResource PrimaryTextBrush}"/>
                            
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="High Priority:" FontWeight="Bold" 
                                      Foreground="{DynamicResource PrimaryTextBrush}"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" x:Name="HighPriorityText" Text="0" 
                                      Foreground="#E74C3C"/>
                            
                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Uptime:" FontWeight="Bold" 
                                      Foreground="{DynamicResource PrimaryTextBrush}"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" x:Name="UptimeText" Text="00:00:00" 
                                      Foreground="{DynamicResource PrimaryTextBrush}"/>
                            
                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Last Alert:" FontWeight="Bold" 
                                      Foreground="{DynamicResource PrimaryTextBrush}"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" x:Name="LastAlertText" Text="None" 
                                      Foreground="{DynamicResource PrimaryTextBrush}"/>
                        </Grid>
                    </Grid>
                </Border>
                
                <!-- Event Log -->
                <Border Grid.Row="2" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Text="Event Log" FontWeight="Bold" 
                                  Background="{DynamicResource SecondaryBackgroundBrush}" 
                                  Foreground="{DynamicResource PrimaryTextBrush}" Padding="10,5"/>
                        
                        <!-- Severity Legend -->
                        <Border Grid.Row="1" Background="{DynamicResource TertiaryBackgroundBrush}" Padding="10,5" Margin="5">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Severity Legend:" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,15,0" VerticalAlignment="Center"/>
                                <StackPanel Orientation="Horizontal" Margin="0,0,10,0">
                                    <Ellipse Width="12" Height="12" Fill="Red" Margin="0,0,5,0">
                                        <Ellipse.ToolTip>
                                            <ToolTip>
                                                <TextBlock Text="Critical/High: Confirmed security breaches or likely threats requiring immediate attention"/>
                                            </ToolTip>
                                        </Ellipse.ToolTip>
                                    </Ellipse>
                                    <TextBlock Text="Critical/High" Foreground="{DynamicResource PrimaryTextBrush}" VerticalAlignment="Center"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,10,0">
                                    <Ellipse Width="12" Height="12" Fill="Yellow" Margin="0,0,5,0">
                                        <Ellipse.ToolTip>
                                            <ToolTip>
                                                <TextBlock Text="Medium/Warning: Suspicious activity or potential issues that warrant attention"/>
                                            </ToolTip>
                                        </Ellipse.ToolTip>
                                    </Ellipse>
                                    <TextBlock Text="Medium/Warning" Foreground="{DynamicResource PrimaryTextBrush}" VerticalAlignment="Center"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,10,0">
                                    <Ellipse Width="12" Height="12" Fill="Green" Margin="0,0,5,0">
                                        <Ellipse.ToolTip>
                                            <ToolTip>
                                                <TextBlock Text="Low: Minor anomalies or routine activities with low priority"/>
                                            </ToolTip>
                                        </Ellipse.ToolTip>
                                    </Ellipse>
                                    <TextBlock Text="Low" Foreground="{DynamicResource PrimaryTextBrush}" VerticalAlignment="Center"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="12" Height="12" Fill="Gray" Margin="0,0,5,0">
                                        <Ellipse.ToolTip>
                                            <ToolTip>
                                                <TextBlock Text="Info: Informational events showing normal system activity"/>
                                            </ToolTip>
                                        </Ellipse.ToolTip>
                                    </Ellipse>
                                    <TextBlock Text="Info" Foreground="{DynamicResource PrimaryTextBrush}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        
                        <!-- Log Filters -->
                        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10,5" Background="{DynamicResource TertiaryBackgroundBrush}">
                            <TextBlock Text="Filter:" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="{DynamicResource PrimaryTextBrush}"/>
                            <ComboBox x:Name="EventTypeFilter" Width="120" Margin="0,0,10,0"
                                     SelectionChanged="EventTypeFilter_Changed">
                                <ComboBoxItem Content="All Events" IsSelected="True"/>
                                <ComboBoxItem Content="Input"/>
                                <ComboBoxItem Content="Login"/>
                                <ComboBoxItem Content="Camera"/>
                                <ComboBoxItem Content="System"/>
                            </ComboBox>
                            <ComboBox x:Name="SeverityFilter" Width="100" Margin="0,0,10,0"
                                     SelectionChanged="SeverityFilter_Changed">
                                <ComboBoxItem Content="All Levels" IsSelected="True"/>
                                <ComboBoxItem Content="Critical"/>
                                <ComboBoxItem Content="High"/>
                                <ComboBoxItem Content="Medium"/>
                                <ComboBoxItem Content="Low"/>
                            </ComboBox>
                            
                            <!-- Timestamp Filter -->
                            <TextBlock Text="Last:" VerticalAlignment="Center" Margin="10,0,5,0" Foreground="{DynamicResource PrimaryTextBrush}"/>
                            <TextBox x:Name="TimeRangeValue" Width="40" Text="1" Margin="0,0,5,0" 
                                    TextAlignment="Center" VerticalAlignment="Center"
                                    Background="{DynamicResource ControlBackgroundBrush}"
                                    Foreground="{DynamicResource PrimaryTextBrush}"
                                    TextChanged="TimeRangeValue_TextChanged"/>
                            <ComboBox x:Name="TimeRangeUnit" Width="60" Margin="0,0,10,0"
                                     SelectionChanged="TimeRangeUnit_Changed">
                                <ComboBoxItem Content="Hours"/>
                                <ComboBoxItem Content="Days" IsSelected="True"/>
                            </ComboBox>
                            
                            <Button Content="ðŸ”„ Refresh" Click="RefreshLog_Click" Padding="5"/>
                        </StackPanel>
                        
                        <!-- Event Log List -->
                        <ListView Grid.Row="3" x:Name="EventLogList" 
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                 Background="{DynamicResource SecondaryBackgroundBrush}"
                                 Foreground="{DynamicResource PrimaryTextBrush}"
                                 MouseDoubleClick="EventLogList_MouseDoubleClick">
                            <ListView.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Copy Event" Click="CopyEvent_Click" />
                                    <MenuItem Header="Copy All Events" Click="CopyAllEvents_Click" />
                                </ContextMenu>
                            </ListView.ContextMenu>
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Time" Width="120" 
                                                   DisplayMemberBinding="{Binding Timestamp, StringFormat=HH:mm:ss}"/>
                                    <GridViewColumn Header="Type" Width="80" 
                                                   DisplayMemberBinding="{Binding EventType}"/>
                                    <GridViewColumn Header="Severity" Width="80">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <Ellipse Width="12" Height="12" Fill="{Binding SeverityColor}"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Description" Width="300" 
                                                   DisplayMemberBinding="{Binding Description}"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
        
        <!-- Bottom Status Bar -->
        <StatusBar Grid.Row="3" Background="#2C3E50">
            <StatusBarItem>
                <TextBlock x:Name="StatusBarText" Text="Ready" Foreground="White"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock x:Name="TimestampText" Text="" Foreground="#BDC3C7"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
